@{
    ViewBag.Title = "Home Page";

}

    <div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://image.freepik.com/free-vector/fashion-sale-banners-with-photo_52683-9828.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://image.freepik.com/free-vector/fashion-sale-banners-with-photo_52683-9827.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://image.freepik.com/free-vector/fashion-sale-banners_52683-11050.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <h3>Tin tức</h3>
        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-md-4 text-center">
                    <img style="float:left; margin-top: 10px;" width="100" height="auto" src="https://image.freepik.com/free-vector/fashion-sale-banners-with-photo_52683-9828.jpg" />
                    <p style="font-size:12px;margin-top:15px;">Mua sỉ quần áo trẻ em xuất khẩu tại Gia Lai, Pleiku giá sỉ.</p>
                </div>
            }

        </div>

    </div>